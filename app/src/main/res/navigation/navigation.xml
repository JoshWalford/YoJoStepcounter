<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mystepcounter2.fragments.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/reportFragment"
        android:name="com.example.mystepcounter2.fragments.ReportFragment"
        android:label="fragment_report"
        tools:layout="@layout/fragment_report">
            <action
                android:id="@+id/action_reportFragment_to_homeFragment"
                app:destination="@id/homeFragment"/>
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.mystepcounter2.fragments.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>